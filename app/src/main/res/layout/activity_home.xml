<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:layout_margin="5dp"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recent"
        android:text="Recently Add Item "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#008000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:padding="2dp"
        android:textSize="20sp"
        android:layout_below="@+id/recye"
        android:id="@+id/recoman"
        android:textColor="#008000"
        android:textStyle="bold"
        android:text="Some Tips For You "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="A healthy diet can be good for your heart as well as your waistline.“Try to eat foods that are in their natural form, as they come from the ground,” Ms. Zumpano says, recommending what she calls the “whole-foods diet.”"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="2dp"
        android:textSize="20sp"
        android:textColor="#008000"
        android:textStyle="bold"
        android:text="15 foods that are good for your heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ExpandableListView
        android:id="@+id/expandableid"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ExpandableListView>

</LinearLayout>